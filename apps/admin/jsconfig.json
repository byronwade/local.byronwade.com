{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@components/*": ["../shared/components/*"],
			"@utils": ["../shared/lib/utils"],
			"@utils/*": ["../shared/lib/utils/*"],
			"@lib/*": ["../shared/lib/*"],
			"@styles/*": ["../shared/styles/*"],
			"@context/*": ["../shared/context/*"],
			"@hooks/*": ["../shared/hooks/*"],
			"@emails/*": ["../shared/emails/*"],
			"@store/*": ["../shared/store/*"],
			"@queries/*": ["../shared/queries/*"],
			"@actions/*": ["../shared/actions/*"]
		}
	},
	"exclude": ["node_modules", ".next"],
	"include": ["**/*.js", "**/*.jsx"]
}
