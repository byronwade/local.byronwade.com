    if (uncachedIds.length === 0) {
      logger.performance(`Batch businesses fully cached: ${ids.length} items`);
      return cacheHits;
    }

    try {
      // Build efficient batch query
      let selectFields = `
        *,
        categories:business_categories(
          category:categories(id, name, slug)
        )
      `;

